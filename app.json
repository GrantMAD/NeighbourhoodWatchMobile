{
  "expo": {
    "name": "NeighbourhoodWatchMobile",
    "slug": "NeighbourhoodWatchMobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Images/nwLogo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/Images/nwLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1f2937"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Images/nwLogo.png",
        "backgroundColor": "#1f2937"
      },
      "softwareKeyboardLayoutMode": "pan",
      "navigationBar": {
        "visible": "immersive"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
